{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2020",           // Output JavaScript version
    "module": "ESNext",           // Use modern ES modules
    "moduleResolution": "bundler", // Let esbuild handle module resolution
    "lib": ["ES2020", "DOM"],     // Available APIs (ES2020 + browser DOM)
    
    /* Type Checking - These catch bugs at compile time */
    "strict": true,               // Enable all strict type checks
    "noImplicitAny": true,        // Error if type is implicitly 'any'
    "strictNullChecks": true,     // null/undefined handled explicitly
    
    /* Output */
    "outDir": "./dist",           // Where compiled JS goes
    "rootDir": "./src",           // Where source TS lives
    
    /* Interop */
    "esModuleInterop": true,      // Better CommonJS/ES module compatibility
    "allowSyntheticDefaultImports": true,
    
    /* Other */
    "skipLibCheck": true,         // Skip type checking node_modules (faster)
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
