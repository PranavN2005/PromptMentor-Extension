{
  "manifest_version": 3,
  "name": "PromptMentor",
  "version": "1.0.0",
  "description": "Promotes adaptive help-seeking from LLMs by detecting executive behaviors and suggesting learning-focused prompts.",
  
  "permissions": [
    "storage",
    "activeTab"
  ],
  
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*"
  ],
  
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*", "https://chat.openai.com/*"],
      "js": ["dist/content/content.js"],
      "css": ["dist/content/content.css"],
      "run_at": "document_idle"
    }
  ],
  
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  
  "action": {
    "default_popup": "dist/popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png"
    }
  }
}
